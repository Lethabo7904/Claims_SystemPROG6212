@model ClaimsSystem.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<h2>Submit Claim</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Lecturer Name</label>
        <input asp-for="LecturerName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input asp-for="Amount" type="number" class="form-control" step="0.01" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit Claim</button>
</form>

